name: " iRingo: 📺 TV app"
desc: "全面自定义「TV app」功能"
openUrl: "http://boxjs.com/#/app/iRingo.TV"
author: "VirgilClyne"
homepage: "https://github.com/NSRingo"
manual: "https://github.com/NSRingo/TV/wiki"
icon: "https://developer.apple.com/assets/elements/icons/apple-tv/apple-tv-128x128.png"
category: " iRingo"

http:
  mitm:
    - "uts-api.itunes.apple.com"
    - "umc-tempo-api.apple.com"
  script:
    - match: https?:\/\/uts-api\.itunes\.apple\.com\/uts\/(v1|v2|v3)\/
      name: TV.request
      type: request
      require-body: true
    - match: https?:\/\/uts-api\.itunes\.apple\.com\/uts\/(v1|v2|v3)\/
      name: TV.response
      type: response
      require-body: true
    - match: ^https?:\/\/umc-tempo-api\.apple\.com\/(v1|v2|v3)\/
      name: TV.request
      type: request
      require-body: true
    - match: ^https?:\/\/play(-edge)?\.itunes\.apple\.com\/WebObjects\/MZPlay(Local)?\.woa\/hls(\/(subscription|workout))?\/playlist\.m3u8
      name: TV.request
      type: request
    - match: ^https?:\/\/play(-edge)?\.itunes\.apple\.com\/WebObjects\/MZPlay(Local)?\.woa\/wa\/(fpsRequest|checkInNonceRequest)
      name: TV.request
      type: request

script-providers:
  TV.request:
    url: https://github.com/NSRingo/TV/releases/latest/download/request.js
    interval: 86400
  TV.response:
    url: https://github.com/NSRingo/TV/releases/latest/download/response.js
    interval: 86400
