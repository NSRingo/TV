[Argument]
{{{arguments}}}

[Argument]
Third-Party = switch,true,tag=启用第三方App与TV app关联功能,desc=是否将桌面版/macOS版/app版等平台的TV app转换至iPad版，以启用第三方App与TV app关联功能(如: Disney+,Prime Video等)
HLSUrl = select,"play-edge.itunes.apple.com","","play.itunes.apple.com",tag=播放服务地址(HLSUrl),desc=因为密钥服务域名禁止MitM，修改密钥服务地址可以分离HLS与Key的MitM域名，从而恢复如对DualSubs的双语字幕支持
ServerUrl = select,"play.itunes.apple.com","","play-edge.itunes.apple.com",tag=密钥服务地址(ServerUrl),desc=因为密钥服务域名禁止MitM，修改密钥服务地址可以分离HLS与Key的MitM域名，从而恢复如对DualSubs的双语字幕支持

[Script]
http-request ^https?:\/\/uts-api\.itunes\.apple\.com\/uts\/(v1|v2|v3)\/ script-path=https://github.com/NSRingo/TV/releases/download/v{{@package 'version'}}/request.js, requires-body=1, tag=📺 TV.uts.request, argument=[{Third-Party},{HLSUrl},{ServerUrl}]
http-response ^https?:\/\/uts-api\.itunes\.apple\.com\/uts\/(v1|v2|v3)\/ script-path=https://github.com/NSRingo/TV/releases/download/v{{@package 'version'}}/response.js, requires-body=1, tag=📺 TV.uts.response, argument=[{Third-Party},{HLSUrl},{ServerUrl}]
http-request ^https?:\/\/umc-tempo-api\.apple\.com\/(v1|v2|v3)\/ script-path=https://github.com/NSRingo/TV/releases/download/v{{@package 'version'}}/request.js, requires-body=1, tag=📺 TV.umc.request

http-request ^https?:\/\/play(-edge)?\.itunes\.apple\.com\/WebObjects\/MZPlay(Local)?\.woa\/hls(\/(subscription|workout))?\/playlist\.m3u8 script-path=https://github.com/NSRingo/TV/releases/download/v{{@package 'version'}}/request.js, tag=📺 TV.hls.request
http-request ^https?:\/\/play(-edge)?\.itunes\.apple\.com\/WebObjects\/MZPlay(Local)?\.woa\/wa\/(fpsRequest|checkInNonceRequest) script-path=https://github.com/NSRingo/TV/releases/download/v{{@package 'version'}}/request.js, tag=📺 TV.wa.request

[MITM]
hostname = uts-api.itunes.apple.com, umc-tempo-api.apple.com
